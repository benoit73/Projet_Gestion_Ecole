<Page x:Class="projet_ga_v2.View.PageRapport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projet_ga_v2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageRapport"
      Background="White"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Margin="5,5,5,5"> <!-- élèves -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="16" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource CenteredTextBlockStyle}" Text="Nombre d'élèves" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Label Grid.Row="1" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black" FontSize="16">Total :</Label>
            <Label x:Name="TbTotalEleves" Grid.Row="1" Grid.Column="1" BorderThickness="1,1,1,1" BorderBrush="Black" FontSize="16">116</Label>

            <Label Grid.Row="2" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En seconde :</Label>
            <Label Grid.Row="2" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="3" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En première :</Label>
            <Label Grid.Row="3" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="4" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En Terminal :</Label>
            <Label Grid.Row="4" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>
        </Grid>

        <Grid Grid.Column="1" Margin="5,5,5,5">
            <!--classes-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="16" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource CenteredTextBlockStyle}" Text="Nombre de classes" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Label Grid.Row="1" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black" FontSize="16">Total :</Label>
            <Label x:Name="TbTotalClasses" Grid.Row="1" Grid.Column="1" BorderThickness="1,1,1,1" BorderBrush="Black" FontSize="16">116</Label>

            <Label Grid.Row="2" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En seconde :</Label>
            <Label Grid.Row="2" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="3" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En première :</Label>
            <Label Grid.Row="3" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="4" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En terminal :</Label>
            <Label Grid.Row="4" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>
        </Grid>
        
        <Grid Grid.Column="2" Margin="5,5,5,5"> <!-- professeurs -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="16" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource CenteredTextBlockStyle}" Text="Nombre de professeurs" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Label Grid.Row="1" Grid.Column="0" BorderThickness="1,1,0,1" BorderBrush="Black" FontSize="16">Total :</Label>
            <Label x:Name="TbTotalProf" Grid.Row="1" Grid.Column="1" BorderThickness="1,1,1,1" BorderBrush="Black" FontSize="16">116</Label>

            <Label Grid.Row="2" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En français :</Label>
            <Label Grid.Row="2" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="3" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En math :</Label>
            <Label Grid.Row="3" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>

            <Label Grid.Row="4" Grid.Column="0" BorderThickness="1,0,0,1" BorderBrush="Black" FontSize="16">En anglais :</Label>
            <Label Grid.Row="4" Grid.Column="1" BorderThickness="1,0,1,1" BorderBrush="Black" FontSize="16">16</Label>
        </Grid>
        
        


    </Grid>
</Page>
