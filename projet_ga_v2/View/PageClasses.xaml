<Page x:Class="projet_ga_v2.View.PageClasses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projet_ga_v2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageClasses">


    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource CenteredTextBlockStyle}" Text="Nom de la classe"/>
            <TextBlock Style="{StaticResource CenteredTextBlockStyle}" Text="Niveau" Grid.Row="1"/>
            <DataGrid x:Name="DgEleves" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*" />
                    <DataGridTextColumn Header="Prénom" Binding="{Binding Prénom}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BtnAdd" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Content="Ajouter !" Style="{StaticResource RoundedButtonStyle}"/>
            <Button x:Name="BtnEdt" Grid.Row="2" Grid.Column="0"  Content="Modifier l'EDT" Style="{StaticResource RoundedButtonStyle}"/>
            <TextBox x:Name="TbNom" Grid.Column="1" Style="{StaticResource RoundedTextBoxStyle}"/>
            <ComboBox Grid.Column="1" Grid.Row="1" Style="{StaticResource SimpleComboBoxStyle}">
                <ComboBoxItem>Niveau seconde</ComboBoxItem>
                <ComboBoxItem>Niveau première</ComboBoxItem>
                <ComboBoxItem>Niveau terminal</ComboBoxItem>
            </ComboBox>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TbEleve" Grid.Row="0" Text="Chercher élève..." LostFocus="TextBox_LostFocus" GotFocus="TextBox_GotFocus"/>
                <ListBox Grid.Row="1"/>
            </Grid>
            <Button x:Name="BtnValiderEleve" Content="Ajouter l'éleve" Grid.Column="3" Style="{StaticResource RoundedButtonStyle}"/>

        </Grid>
        <DataGrid x:Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom de la classe" Binding="{Binding Nom}" Width="*" />
                <DataGridTextColumn Header="Niveau" Binding="{Binding Niveau}" Width="*" />
                <DataGridTextColumn Header="Nombre d'élèves" Binding="{Binding Mail}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
